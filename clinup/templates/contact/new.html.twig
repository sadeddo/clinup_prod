<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Home</title>

    <!-- Material Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>
<body>
    <div class="grid-container">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background:#ff4063 !important;">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}"><img src="/assets/img/Clinup.png" alt="easyloc" width="110px"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_pricing') }}" style="color: white; font-weight: bolder;">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <button type="button" class="btn btn-primary btn-lg" style="border-radius: 50px; font-size: 0.9rem; background-color: #ff4063; color: white;">Se connecter</button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">
                                <button type="button" class="btn btn-primary btn-lg" style="border-radius: 50px; font-size: 0.9rem;">Créer un compte</button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Header -->

        <!-- Main Section -->
        <section>

            <div class="cl-form">
                     {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">{{ message }}</div>
                                {% endfor %}
               {{ form_start(form) }}
                    <div class="row">
                   <div class="col-md-12">
                        <div class="form-group">
                            <label for="date">Nom</label>
                            <div class="input-group">
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                   <div class="col-md-12">
                        <div class="form-group">
                            <label for="date">E-mail</label>
                            <div class="input-group">
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                   <div class="col-md-12">
                        <div class="form-group">
                            <label for="date">Message</label>
                            <div class="input-group">
                                {{ form_widget(form.message) }}
                            </div>
                        </div>
                    </div>
                </div><br>
                <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="background:#FF385C;">Enregistrer</button>
            </div>
        </div>
    </div>
    {{ form_row(form._token) }}
               {{ form_end(form) }}
            </div>
        </section>
        <!-- End Main Section -->

        <!-- Footer -->
        <div class="footer-clean">
            <footer>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-sm-4 col-md-4 item">
                            <img src="/assets/img/logo-clinup.png" alt="clinup" width="110px">
                        </div>
                        <div class="col-sm-4 col-md-4 item">
                            <p class="copyright">© 2024 Clinup. All rights reserved.</p>
                        </div>
                        <div class="col-lg-3 item social">
                            <a href="#"><i class="icon ion-social-facebook"></i></a>
                            <a href="#"><i class="icon ion-social-twitter"></i></a>
                            <a href="#"><i class="icon ion-social-snapchat"></i></a>
                            <a href="#"><i class="icon ion-social-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        <!-- End Footer -->
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-GNFkntGAXJ51BQZlD1nHJFkQoAlTD1zuvq3a5H0hZ80hZ4j3RF6Egi7W/Uqr3pjm" crossorigin="anonymous"></script>
</body>
<style>
/* Centrer le formulaire dans la page */
section {
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(100vh - 160px); /* Hauteur de la page moins la taille du header et footer */
    text-align: center;
    padding: 20px;
    width:100%;
}

/* Footer toujours en bas */
.footer-clean {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #f9f9f9; /* Couleur du footer */
    text-align: center;
    padding: 15px 0;
    box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}


</style>
</html>
