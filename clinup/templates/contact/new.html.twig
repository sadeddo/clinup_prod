    <style>
.contact-section {
    padding: 80px 0;
    background: linear-gradient(to bottom right, #ffffff, #f8f9fa);
}

.contact-header {
    text-align: center;
    margin-bottom: 50px;
}

.contact-header h1 {
    color: #333;
    font-size: 2.5rem;
    margin-bottom: 15px;
}

.contact-header p {
    color: #666;
    font-size: 1.1rem;
}

.contact-form {
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
}

.form-group {
    margin-bottom: 25px;
    position: relative;
}

.form-group label {
    font-weight: 500;
    color: #555;
    margin-bottom: 8px;
    display: block;
}

.form-control {
    border: 2px solid #e1e1e1;
    border-radius: 8px;
    padding: 12px 15px;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #ff4063;
    box-shadow: 0 0 0 0.2rem rgba(255, 64, 99, 0.1);
}

.contact-info {
    background: #ff4063;
    color: white;
    padding: 40px;
    border-radius: 15px;
    height: 100%;
}

.contact-info h3 {
    margin-bottom: 25px;
    font-size: 1.5rem;
}

.info-item {
    margin-bottom: 20px;
    display: flex;
    align-items: center;
}

.info-item i {
    margin-right: 15px;
    font-size: 20px;
}

.submit-btn {
    background: #ff4063;
    border: none;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
    width: 100%;
}

.submit-btn:hover {
    background: #ff2d53;
    transform: translateY(-2px);
}

.alert {
    border-radius: 8px;
    margin-bottom: 20px;
}
.contact-info {
    background: white;  /* Changé de #ff4063 à white pour mieux aller avec l'image */
    padding: 20px;     /* Réduit le padding pour l'image */
    border-radius: 15px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.contact-info img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 10px;
    display: block;
    margin: auto;
}

/* Ajustements responsive */
@media (max-width: 991px) {
    .contact-info {
        margin-top: 30px;
        height: auto;
        min-height: 300px;
    }
}
</style>
    <div class="contact-section">
    <div class="container">
        <div class="contact-header">
            <h1>Contactez-nous</h1>
            <p>Nous sommes là pour vous aider. Notre équipe vous répondra dans les plus brefs délais.</p>
        </div>

        <div class="row">
            <div class="col-lg-7">
                <div class="contact-form">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            <label><i class="bi bi-person me-2"></i>Nom</label>
                            {{ form_widget(form.name, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Votre nom complet'
                                }
                            }) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group">
                            <label><i class="bi bi-envelope me-2"></i>E-mail</label>
                            {{ form_widget(form.email, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Votre adresse e-mail'
                                }
                            }) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="form-group">
                            <label><i class="bi bi-chat-text me-2"></i>Message</label>
                            {{ form_widget(form.message, {
                                'attr': {
                                    'class': 'form-control',
                                    'rows': '5',
                                    'placeholder': 'Votre message...'
                                }
                            }) }}
                            {{ form_errors(form.message) }}
                        </div>

                        <button type="submit" class="submit-btn">
                            <i class="bi bi-send me-2"></i>Envoyer le message
                        </button>

                    {{ form_end(form) }}
                </div>
            </div>

            <div class="col-lg-5">
                <div class="contact-info">
                   <img src="/assets/img/auth-clesan.png" >
                </div>
            </div>
        </div>
    </div>
